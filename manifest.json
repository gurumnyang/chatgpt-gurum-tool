{
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "name": "__MSG_appName__",
  "version": "1.2.2",
  "description": "__MSG_appDesc__",
  "default_locale": "ko",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],  "web_accessible_resources": [
    {
      "resources": [
        "fetch-hook.js",
        "dist/tiktoken.bundle.js",
        "dist/tiktoken-ranks.bundle.js",
        "token-calculator.js"
      ],
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ]
    }
  ],"permissions": [
    "storage",
    "alarms",
    "notifications",
    "downloads",
    "webRequest"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://raw.githubusercontent.com/*"
  ]
}
