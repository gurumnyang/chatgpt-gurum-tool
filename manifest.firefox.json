{
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },
  "name": "구름툴:ChatGPT 보조도구",
  "version": "1.2.2",
  "description": "ChatGPT 사용량 모니터링, 대화 내보내기, 컨텍스트 추적 등을 지원하는 보조 도구",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://*.openai.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "request-hook.js",
        "fetch-hook.js",
        "token-calculator.js",
        "dist/tiktoken.bundle.js",
        "dist/tiktoken-ranks.bundle.js"
      ],
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "https://*.openai.com/*"
      ]
    }
  ],
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "downloads"
  ],
  "host_permissions": [
    "https://*.openai.com/*",
    "https://chatgpt.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "chatgpt-tool@gurum.dev",
      "strict_min_version": "128.0"
    }
  }
}
